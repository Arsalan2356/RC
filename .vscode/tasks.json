{
    "tasks": [
        {
            "type": "shell",
            "label": "Compile and Run",
            "command": "./bin/main.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "Compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
            
        },
        {
            "type": "shell",
            "label": "Compile",
            "command": "make",
            "args": [
                "all"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}